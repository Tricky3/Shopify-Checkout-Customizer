.payment-method-info{float:left;line-height:$tricky_var-line-height;}
.payment-method-name{display:block;color:#555;font-weight:500}
.payment-method-masked-code{display:none;font-weight:normal}
.payment-method-additional-info{display:block;color:#777}
.payment-method-total{display:block;float:right;font-size:1em;color:$checkout_payment-due-color;font-size:15px;font-size:1.125rem}
.billing-address-summary{margin-top:1.5em}
.offsite-gateway-logo{max-height:24px;margin:-2px 0}

@media all and (min-width: 600px){
	.payment-method-masked-code{display:inline}
	.payment-methods .payment-method{display:block}
	.payment-methods .payment-method.payment-method--logo{display:inline-block}
	.payment-methods .payment-method.generic{display:none}
	.payment-methods.known .payment-method{display:inline-block}
	.payment-methods.known .payment-method.generic{display:none}
	.payment-methods.known .payment-method.unknown{display:none}
}

/*=================================== Main Header =================================*/
.main__header{text-align:center;padding:1.5em;margin-bottom:1.5em;width:100%;}
.main__header img+h2,.main__header svg+h2{margin-top:1em}
.main__header h2{margin-bottom:.5em}
.main__header p{color:#999}

@media all and (min-width: 600px){
	.main__header{padding:2.5em}
	.main__header h2{margin-bottom:.25em}}
@media screen and (min-width: 1000px){
	.main__header p{max-width:50%;margin:0 auto}
}


/*===================================== Modals ====================================*/
.modal{background:$checkout_main-bg-color;color:$tricky_var-primary-color;}
.modal__close{position:absolute;right:0;top:0;padding:.5em .75em;color:#ccc;color:rgba(0,0,0,0.2);font-size:33px;font-size:2.5rem}
.modal__close:hover{color:#999}.policy-header{margin-bottom:1.5em;border-bottom:1px $checkout_border-style #ededed;padding-bottom:1em}
.policy-header .policy__print-link{display:none}
.policy-header__shop-name{color:$checkout_shop-name-color}
.policy-body p{color:$tricky_var-primary-color;font-size:$checkout_base-font-size;font-weight:normal;}

@media all and (min-width: 600px){
	.modal{padding-top:3em}
	.modal .wrap{width:80%}
	.policy-header{margin-bottom:3em;padding-bottom:2em;position:relative}
	.policy-header .policy__print-link{display:block;position:absolute;top:1em;right:0}
	.policy-body p{font-size:$checkout_base-font-size;line-height:$tricky_var-line-height;}
}

@media screen and (min-width: 1000px){
	.modal{padding-top:6em;padding-bottom:4em}
	.modal__close{position:fixed;font-weight:300;font-size:35px;font-size:2.5rem}
	.policy__header{margin-bottom:3em;padding-bottom:2.5em}
	.has-modal .footer{position:fixed;width:100%;bottom:0;left:0;z-index:9999}
}

@media screen and (min-width: 1100px){
	.modal{padding-top:8.75em;padding-bottom:8.75em}
}


/*=========================Alternative Payment Methods ============================*/
.alternative-payment-methods{padding:1.5em 1.5em 2em;margin-bottom:1em;border-bottom:medium none;position:relative;text-align:center}
.alternative-payment-methods .or{
	min-width:18px;
	padding:0.5em;
	margin:-14px 0 0 -14px;
	background-color:$checkout_fieldset-bg-color;
	border:1px $checkout_border-style $checkout_fieldset-border-color;
	border-radius:2em;
	font-size:11px;
	color:$tricky_var-primary-color;
	line-height:$tricky_var-line-height;
	-webkit-box-shadow:0 0 0 8px $checkout_fieldset-bg-color;
	box-shadow:0 0 0 8px $checkout_fieldset-bg-color;
}
.alternative-payment-methods p{display:block;text-align:center}
.alternative-payment-methods__btn{border-radius:$checkout_border-radius;display:inline-block;border:1px $checkout_border-style #2a9dcc;padding:.6em .75em .4em;vertical-align:-0.5em;margin-left:.5em}
.alternative-payment-methods__btn img{height:21px}

@media all and (min-width: 600px){
	.alternative-payment-methods__btn{display:inline-block}
}

/*===================================== Product ===================================*/
.product{zoom:1;position:relative}
.product:after,.product:before{content:"";display:table}
.product:after{clear:both}
.no-generatedcontent .product{overflow:hidden}
.product__image{display:block;width:5em;border-radius:$checkout_border-radius;float:left;overflow:hidden;margin-right:1em}
.product__info{float:left}
.product__info__name,.product__info__description{display:block}
.product__info__name{margin-bottom:.4em}
.product__info__name strong{color:$checkout_order-summary-color;}


/*================================= Shipping Options ==============================*/
.shipping-option{padding-right:7em}
@media all and (min-width: 600px){
	.shipping-option{padding-right:7.25em}
}

.shipping-option__price{position:absolute;top:1em;right:1em}
@media all and (min-width: 600px){
	.shipping-option__price{top:$checkout_field-padding}
}
@media all and (min-width: 600px){
	.shipping-option__price{right:$checkout_field-padding}
}

/*================================= Applied Gift Cards ============================*/
.applied-gift-card{zoom:1}
.applied-gift-card:after,.applied-gift-card:before{content:"";display:table}
.applied-gift-card:after{clear:both}
.no-generatedcontent .applied-gift-card{overflow:hidden}
.applied-gift-card .payment-method{float:left;position:relative;top:auto;right:auto;margin-right:.75em}
.applied-gift-card .btn--delete{position:absolute;right:1em;top:$checkout_field-padding;margin:0}
.applied-gift-card .error-message{padding-left:0}
.applied-gift-card__masked-code{display:block;margin-top:-0.5em;font-weight:500;color:#555}
.applied-gift-card__balance{display:block;color:#999}

@media all and (min-width: 600px){
	.applied-gift-card .btn--delete{position:absolute;right:$checkout_field-padding;top:1.35em;margin:0}
	.applied-gift-card__masked-code{float:left;margin-top:.1em}
	.applied-gift-card__balance{float:right;margin:.1em 2.25em 0 0}
}

/*========================================Sections ================================*/

.section{
	padding:1.5em;
	border-top:1px $checkout_border-style $checkout_section-border-color;
	zoom:1
}
.section:after,.section:before{content:"";display:table}
.section:after{clear:both}
.no-generatedcontent .section{overflow:hidden}
.section:first-child{border-top:none}
.section.step--blank{display:none}

@media all and (max-width: 599px){
	#checkout:not(.current-step-review) .step--completed .section__header{margin-bottom:0}
	#checkout:not(.current-step-review) .step--completed .section__summary{display:none}
}

@media all and (min-width: 600px){
	.section{padding:0 0 3em 0}.section--additional-mobile-cta{display:none}
}


/*===================================Section Header ===============================*/
.section__header{
	margin:0 0 1.5em;
	line-height:$tricky_var-line-height;
	}
.step--blank .section__header h3{color:$checkout_headings-color;}
.section__header .section__edit-link{
	font-size:$checkout_base-font-size;
}
@media all and (min-width: 600px){
	.step--current .section__header{margin:0}
}
@media screen and (min-width: 1000px){
	.section__header .payment-due{display:none}
}

.section__form+.section__form,.section__form+form{margin-top:1em}
@media all and (min-width: 600px){
	.section__form+.section__form,.section__form+form{margin-top:1.5em}
}

.section__blank-slate{
	border-radius:$checkout_border-radius;
}
.section__blank-slate i,.section__blank-slate .svg{margin-bottom:.75em}
@media screen and (min-width: 1000px){
	.section__blank-slate{padding:1.5em 1.125em}
}
/*=====================================Section Notice ================================*/
.section__notice{padding:1em;line-height:$tricky_var-line-height;border-radius:$checkout_border-radius;}
.section__notice:after,.section__notice:before{content:"";display:table}
.section__notice:after{clear:both}
.no-generatedcontent .section__notice{overflow:hidden}
.section__notice--error{background-color:$checkout_field-error-bg-color;}
.section__notice--error h4{color:$checkout_field-error-label-color}
.section__notice--error p{color:$checkout_field-error-color;margin: 0 3rem 1rem 0rem;}
.section__notice--warning{background:$checkout_field-error-bg-color;}
.section__notice--warning h4{color:$checkout_field-error-label-color}
.section__notice--warning p{color:$checkout_field-error-color}


/*================================Logged In Customer ==============================*/
.logged-in-customer{overflow:hidden;margin-bottom:1.5em}
.logged-in-customer__avatar{width:3.25em;border-radius:$checkout_border-radius;float:left;margin-right:.75em}
.logged-in-customer__information{float:left;margin-top:.125em}
@media all and (min-width: 600px){
	.logged-in-customer__avatar{margin-right:1em}
}

/*====================================Subsection ==================================*/
.subsection{padding:0 1.5em 1.5em}
.subsection:first-child{padding-top:1em}
@media all and (min-width: 600px){
	.subsection{padding:0 0 2.5em}
	.subsection:first-child{padding-top:2.5em}
}

